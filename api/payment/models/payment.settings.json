{
  "kind": "collectionType",
  "collectionName": "payments",
  "info": {
    "name": "payment"
  },
  "options": {
    "increments": true,
    "timestamps": true
  },
  "attributes": {
    "pay_date": {
      "type": "datetime"
    },
    "payment_method": {
      "type": "string"
    },
    "response_code": {
      "type": "string",
      "private": true
    },
    "buy_order": {
      "type": "string"
    },
    "verified": {
      "type": "boolean",
      "default": false
    },
    "amount": {
      "type": "biginteger"
    },
    "user": {
      "plugin": "users-permissions",
      "model": "user",
      "via": "payments"
    },
    "orders": {
      "via": "payment",
      "collection": "order"
    },
    "authorization_code": {
      "type": "string",
      "private": true
    },
    "commerce_code": {
      "type": "string",
      "private": true
    },
    "vci": {
      "type": "string",
      "private": true
    },
    "card_number": {
      "type": "string"
    }
  }
}
